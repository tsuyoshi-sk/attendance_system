# 勤怠管理システム環境変数設定テンプレート
# このファイルを .env にコピーして使用してください

# アプリケーション設定
APP_NAME="勤怠管理システム"
APP_VERSION="1.0.0"
DEBUG=False
SECRET_KEY="your-secret-key-here-change-this-in-production"
LOG_LEVEL="INFO"

# データベース設定
DATABASE_URL="sqlite:///./data/attendance.db"
# PostgreSQL使用時の例:
# DATABASE_URL="postgresql://user:password@localhost:5432/attendance_db"

# API設定
API_V1_PREFIX="/api/v1"
CORS_ORIGINS='["http://localhost:3000", "http://localhost:8080"]'

# PaSoRi設定
PASORI_TIMEOUT=3
PASORI_MOCK_MODE=False
IDM_HASH_SECRET="your-idm-hash-secret-change-this"

# ビジネスルール設定
BUSINESS_START_TIME="09:00:00"
BUSINESS_END_TIME="18:00:00"
BREAK_START_TIME="12:00:00"
BREAK_END_TIME="13:00:00"

# 時間丸め設定（分単位）
DAILY_ROUND_MINUTES=15
MONTHLY_ROUND_MINUTES=30

# 時間外/深夜/休日手当率
OVERTIME_RATE_NORMAL=1.25
OVERTIME_RATE_LATE=1.50
NIGHT_RATE=1.25
HOLIDAY_RATE=1.35

# Slack通知設定（オプション）
SLACK_ENABLED=False
SLACK_TOKEN=""
SLACK_CHANNEL="#attendance-alerts"

# セキュリティ設定
# レート制限（1分あたりのリクエスト数）
RATE_LIMIT_PER_MINUTE=60
# セッションタイムアウト（分）
SESSION_TIMEOUT_MINUTES=30
# パスワードポリシー
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_COMPLEXITY=True

# オフライン機能設定
OFFLINE_QUEUE_MAX_SIZE=100
OFFLINE_RETENTION_DAYS=7
OFFLINE_SYNC_INTERVAL_SECONDS=60

# ログ設定
LOG_DIR="./logs"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# メール設定（オプション）
MAIL_ENABLED=False
MAIL_SERVER="smtp.gmail.com"
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=""
MAIL_PASSWORD=""
MAIL_FROM="noreply@attendance-system.example.com"

# バックアップ設定
BACKUP_ENABLED=True
BACKUP_SCHEDULE="0 2 * * *"  # 毎日午前2時
BACKUP_RETENTION_DAYS=30
BACKUP_PATH="./backups"

# メンテナンスモード
MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE="システムメンテナンス中です。しばらくお待ちください。"

# 開発環境用設定
# 本番環境では必ずFalseに設定してください
ALLOW_TEST_ENDPOINTS=False
ENABLE_DEBUG_TOOLBAR=False

# モニタリング設定（オプション）
ENABLE_METRICS=True
METRICS_PORT=9090

# キャッシュ設定（オプション）
CACHE_TYPE="simple"  # "redis", "memcached", "simple"
CACHE_REDIS_URL="redis://localhost:6379/0"
CACHE_DEFAULT_TIMEOUT=300

# その他の設定
TIMEZONE="Asia/Tokyo"
LOCALE="ja_JP"
DATE_FORMAT="%Y-%m-%d"
TIME_FORMAT="%H:%M:%S"
DATETIME_FORMAT="%Y-%m-%d %H:%M:%S"